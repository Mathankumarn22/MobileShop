@model  OnlineMobileShop.Entity.Mobile

@{
    ViewBag.Title = "AddMobiles";
}

@Html.ActionLink("Add new details", "Create")
<head>
    <style>
        #table {
            border-spacing: 10px;
            padding: 10px;
        }
    </style>
</head>
<h2>Create</h2>
@using (Html.BeginForm("Create", "Mobile", FormMethod.Post))
{
    <table>

        

        <tr>
            <td>
                @Html.Label("Model")
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.Model)
            </td>
        </tr>

        <tr>
            <td>
                @Html.Label("Battery")
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.Battery)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("RAM")
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.RAM)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("ROM")
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.ROM)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Price")
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.Price)
            </td>
        </tr>

        <tr>
            <td>
                @Html.ActionLink("Back", "DisplayDetails")
            </td>
            <td>
                <input type="submit" id="=submit" />
            </td>
            <td>
                @Html.LabelFor(Model=>Model.Brand)
            </td>
            <td>
                @Html.DropDownListFor(model=>model.BrandID,(IEnumerable<SelectListItem>)ViewBag.Mobile,"Select Brand")
            </td>
        </tr>
    </table>
}



